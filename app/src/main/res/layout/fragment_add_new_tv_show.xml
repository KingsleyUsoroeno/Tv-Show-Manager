<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="30dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="20dp"
    tools:context=".presentation.tvshows.AddNewTvShowFragment">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_tv_show"
        style="@style/EditTextStyle"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:hint="@string/tv_show"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_tv_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:inputType="text"
            android:fontFamily="@font/proxima_nova_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_release_date"
        style="@style/EditTextStyle"
        android:layout_marginTop="10dp"
        android:hint="@string/release_date"
        app:layout_constraintEnd_toEndOf="@id/edt_tv_show"
        app:layout_constraintStart_toStartOf="@id/edt_tv_show"
        app:layout_constraintTop_toBottomOf="@id/edt_tv_show">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_release_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:inputType="date"
            android:textColor="@color/black"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/text_size_medium" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edt_seasons"
        style="@style/EditTextStyle"
        android:layout_marginTop="10dp"
        android:hint="@string/seasons"
        app:hintTextAppearance="@style/TextLabel"
        app:layout_constraintEnd_toEndOf="@id/edt_tv_show"
        app:layout_constraintStart_toStartOf="@id/edt_tv_show"
        app:layout_constraintTop_toBottomOf="@id/edt_release_date">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_season"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:digits="0123456789"
            android:gravity="start"
            android:inputType="number"
            android:textColor="@color/black"
            android:fontFamily="@font/proxima_nova_regular"
            android:textSize="@dimen/text_size_medium" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddNewTvShow"
        android:layout_width="200dp"
        style="@style/CustomButtonStyle"
        android:layout_height="46dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/save_tv_show_all_caps"
        app:layout_constraintTop_toBottomOf="@id/edt_seasons"/>

</androidx.constraintlayout.widget.ConstraintLayout>