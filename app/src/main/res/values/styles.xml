<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/default_button_height</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/proxima_nova_regular</item>
    </style>

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <!--<item name="colorControlHighlight">@color/background_color</item>-->
        <item name="cornerRadius">@dimen/default_text_input_radius</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">@dimen/textInput_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="errorTextAppearance">@style/FluxEditText.ErrorText</item>
        <item name="boxStrokeColor">@color/primaryLight</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="FluxEditText.ErrorText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/cabaret</item>
        <item name="android:textSize">@dimen/textInput_error_text_size</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/textInput_text_size</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

</resources>